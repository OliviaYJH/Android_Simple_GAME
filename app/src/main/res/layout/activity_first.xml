<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/whitewall"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/tv_gametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 안에 원하는 음식 드려야 한다!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="28dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="-130dp"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:text="메뉴"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

         />


    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/burger"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="햄버거"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="295dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cheesecake"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="치즈케이크"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hotdog"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핫도그"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spaghetti"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스파게티"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="450dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/steak"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스테이크"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintEnd_toStartOf="@+id/tv_gametitle"
        app:layout_constraintStart_toEndOf="@+id/btn_gamestart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:rotation="90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sushi"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스시       "
            android:textSize="20dp"/>
    </LinearLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gamestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Game Start!  "
        android:textSize="20dp"
        android:rotation="90"
        android:textColor="#814040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFEB3B"
        android:layout_marginLeft="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>