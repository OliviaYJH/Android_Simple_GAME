<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_tile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:src="@drawable/tile"/>
        <ImageView
            android:id="@+id/iv_tile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"
            android:src="@drawable/tile"/>
        <ImageView
            android:id="@+id/iv_tile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"
            android:src="@drawable/tile"/>
        <ImageView
            android:id="@+id/iv_tile4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tile"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_limitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00초"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/iv_heart1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/heart"/>
            <ImageView
                android:id="@+id/iv_heart2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/heart"/>
            <ImageView
                android:id="@+id/iv_heart3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/heart"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_table1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/table"/>
        <ImageView
            android:id="@+id/iv_custom1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/person1"
            app:layout_constraintBottom_toTopOf="@+id/iv_table1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="-50dp"/>
        <ImageView
            android:id="@+id/iv_bubble1"
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble"
            app:layout_constraintBottom_toTopOf="@+id/iv_custom1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_custom1_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/iv_bubble1"
            app:layout_constraintStart_toStartOf="@+id/iv_bubble1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>




        <ImageView
            android:id="@+id/iv_table2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_table1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/table"/>
        <ImageView
            android:id="@+id/iv_custom2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/person2"
            app:layout_constraintBottom_toTopOf="@+id/iv_table2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="-50dp"/>
        <ImageView
            android:id="@+id/iv_bubble2"
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_custom2"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_custom2_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="@+id/iv_bubble2"
            app:layout_constraintStart_toStartOf="@+id/iv_bubble2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>




        <ImageView
            android:id="@+id/iv_table3"
            app:layout_constraintTop_toBottomOf="@+id/iv_table1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/table"/>
        <ImageView
            android:id="@+id/iv_custom3"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/person3"
            app:layout_constraintBottom_toTopOf="@+id/iv_table3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="-50dp"
            />
        <ImageView
            android:id="@+id/iv_bubble3"
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_custom3"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_custom3_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/iv_bubble3"
            app:layout_constraintTop_toTopOf="@id/iv_bubble3"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>



        <ImageView
            android:id="@+id/iv_table4"
            app:layout_constraintTop_toBottomOf="@+id/iv_table2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/table"/>
        <ImageView
            android:id="@+id/iv_custom4"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/person4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_table4"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="-50dp"/>
        <ImageView
            android:id="@+id/iv_bubble4"
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_custom4"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tv_custom4_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/iv_bubble4"
            app:layout_constraintTop_toTopOf="@+id/iv_bubble4"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>




        <View
            android:id="@+id/view_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="#fff"
            android:background="#fff"
            android:layout_marginBottom="50dp"/>
        <LinearLayout
            app:layout_constraintTop_toTopOf="@+id/view_white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_burger"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/burger"/>
            <ImageView
                android:id="@+id/iv_cheesecake"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/cheesecake"/>
            <ImageView
                android:id="@+id/iv_hotdog"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/hotdog"/>
            <ImageView
                android:id="@+id/iv_spaghetti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/spaghetti"/>
            <ImageView
                android:id="@+id/iv_steak"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/steak"/>
            <ImageView
                android:id="@+id/iv_sushi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/sushi"/>

        </LinearLayout>





        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_white"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
